@font-face {
    font-family: 'Ostrich';
    src: url('fonts/Ostrich/ostrich-light-webfont.eot');
    src: url('fonts/Ostrich/ostrich-light-webfont.eot?#iefix') format('embedded-opentype'),
         url('fonts/Ostrich/ostrich-light-webfont.woff') format('woff'),
         url('fonts/Ostrich/ostrich-light-webfont.ttf') format('truetype'),
         url('fonts/Ostrich/ostrich-light-webfont.svg#OstrichSansMedium') format('svg');
    font-weight: normal;
    font-style: normal;
}


#body {
	width: 960px; 
	margin: 50px auto; 
	background-color: #f9f6e7; 
	padding-top: 25px; 
	-webkit-box-shadow: 0px 0px 30px rgba(50, 50, 50, 0.6);
	-moz-box-shadow:    0px 0px 30px rgba(50, 50, 50, 0.6);
	box-shadow:         0px 0px 30px rgba(50, 50, 50, 0.6);
}

#main-header-text{
	font-family: 'Ostrich', sans-serif;
	font-size: 120px;
	line-height: 100px;
	text-align: center;
	color: #393e42;
	letter-spacing: 4px;
	margin: 35px 0 15px 0;
}

#sub-header-text{
	font-family: 'Ostrich', sans-serif;
	font-size: 42px;
	line-height: 36px;
	text-align: center;
	color: #393e42;
	letter-spacing: 4px;
	margin-top: 0px;
}

.row{
	font-family: 'Ostrich', sans-serif;
	color: #393e42;
	overflow: hidden;
}

.span4{
	width: 280px;
	margin-right: 20px;
	float: left;
	padding: 10px 10px 10px 10px;

}

#main-navigation {
	list-style-type: none;
	height:39px; 
	margin: 0 0 5px;
}

#main-navigation li {
	float: left;
	margin-right: 5px;

}

#main-navigation a {
	text-decoration: none;
	line-height: 30px;
	font-size: 30px;
	font-family: "Ostrich", sans-serif;
	color: #393e42;
	letter-spacing: 1px;
	font-weight: bold;
	background-color: #ffffff;
	display: block;
	padding: 8px 8px 1px;
	-webkit-transition:color .3s ease-in;  
   -moz-transition:color .3s ease-in;  
   -o-transition:color .3s ease-in;  
   transition:color .3s ease-in; 
   -webkit-transition:background-color .3s ease-in;  
   -moz-transition:background-color .3s ease-in;  
   -o-transition:background-color .3s ease-in;  
   transition:background-color .3s ease-in; 
}

#main-navigation a:hover, 
#main-navigation a.active {
	background-color: #393e42;
	color: #f9f6e7;
}


